{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Project (Debug)",
            "type": "shell",
            "command": "cl.exe",
            "args": [
                "/Zi",                           // Generar información de depuración
                "/EHsc",                         // Habilitar manejo de excepciones
                "/std:c++17",                    // Usar C++17
                "/Fe:${workspaceFolder}/build/main.exe", // Archivo de salida .exe
                "/I:${workspaceFolder}/dependencies/include", // 1. DÓNDE ESTÁN LOS .H
                "${workspaceFolder}/src/*.cpp",  // 2. QUÉ ARCHIVOS COMPILAR
                "/link",                         // 3. AHORA EMPIEZA EL ENLAZADOR
                "/LIBPATH:${workspaceFolder}/dependencies/lib", // 4. DÓNDE ESTÁN LOS .LIB
                // 5. QUÉ ARCHIVOS .LIB USAR
                "glfw3.lib",
                "assimp-vc143-mt.lib",
                "opengl32.lib",
                "User32.lib",
                "Gdi32.lib",
                "Shell32.lib"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": "$msCompile"
        }
    ]
}